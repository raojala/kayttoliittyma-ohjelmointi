<Window x:Class="labra_14_wpfthreadingdemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labra_14_wpfthreadingdemo"
        mc:Ignorable="d"
        Title="simple thread demo" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="btnWork" Content="do long work" Width="100" FontSize="16" Click="btnWork_Click" />
            <Button x:Name="btnFire" Content="Fire!" Width="100" FontSize="16" Click="btnFire_Click" />
            <TextBox x:Name="txtMessage" Text="message come here" Width="auto" FontSize="16" />
            
        </StackPanel>
    </Grid>
</Window>
